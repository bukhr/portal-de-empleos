<% if page.current? %>
  <span class="relative inline-flex items-center px-4 py-2 border border-primary text-sm font-medium text-white bg-primary cursor-default leading-5 rounded-md">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 leading-5 rounded-md transition duration-150 ease-in-out", rel: page.rel %>
<% end %> 